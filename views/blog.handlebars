
				<h2 >{{title}}</h2>
        <h3 >{{author_name}}</h3>
        <h4>Created by {{user.username}} on {{format_date date_created}}</h4>
	
		    <p >{{description}}</p>
	

		{{#if logged_in}}
		<form  class="new-comment-form" data-blogid={{id}}>
			<div >
				<textarea id="comment_description"
				placeholder="add comment here..."
				cols="35"
				rows="2"></textarea>
			</div>
			<div>
				<button type="submit">Add Comment</button>
			</div>
		</form>
		{{/if}}

		<h2>Comments</h2>
		{{#each comments as |comment|}}
		<div>
			<p class="text-center commentText">{{comment.comment_description}}</p>
			<p class="text-center commentOwner"><span>~</span>Created by {{comment.user.username}} on {{format_date date_created}}<span>~</span></p>
		</div>
		{{/each}}

		<script src="/js/comments.js"></script>